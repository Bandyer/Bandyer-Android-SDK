<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/mock_user_details_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/space16"
        android:paddingLeft="@dimen/space16"
        android:paddingTop="@dimen/space16"
        android:paddingEnd="@dimen/space16"
        android:paddingRight="@dimen/space16"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radio_button_user_details_none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space8"
            android:text="@string/mock_user_details_config_none" />

        <TextView
            android:id="@+id/radio_button_user_details_none_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space32"
            android:layout_marginLeft="@dimen/space32"
            android:layout_marginBottom="@dimen/space16"
            android:text="@string/mock_user_details_config_none_summary" />

        <RadioButton
            android:id="@+id/radio_button_user_details_random"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space8"
            android:text="@string/mock_user_details_config_sample" />

        <TextView
            android:id="@+id/radio_button_user_details_random_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space32"
            android:layout_marginLeft="@dimen/space32"
            android:layout_marginBottom="@dimen/space16"
            android:text="@string/mock_user_details_config_sample_summary" />

        <RadioButton
            android:id="@+id/radio_button_user_details_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space8"
            android:text="@string/mock_user_details_config_custom" />

        <TextView
            android:id="@+id/radio_button_user_details_custom_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space32"
            android:layout_marginLeft="@dimen/space32"
            android:layout_marginBottom="@dimen/space16"
            android:text="@string/mock_user_details_config_custom_summary" />

    </RadioGroup>

    <include layout="@layout/image_text_edit_layout" />

</LinearLayout>